<div class="mainFilters hidden colorSecondary">
    <img src="/images/left-arrow.png" alt="Filters" id="filtersButtonClose">
    <h1>Filters</h1>
    <form>
        <div>
            <label class="filterName">Adults</label>
            <div>
                <button class="filterButton" type="button" tabindex="-1" value="-1">-</button>
                <input class="filterInput" placeholder="0" value="" type="number" min="1" max="10" name="adults">
                <button class="filterButton" type="button" tabindex="-1" value="1">+</button>
            </div>
            <img src="/images/x.png" alt="x">
        </div>
        <div>
            <label class="filterName">Children</label>
            <div>
                <button class="filterButton" type="button" tabindex="-1" value="-1">-</button>
                <input class="filterInput" placeholder="0" value="" type="number" min="0" max="10" name="children">
                <button class="filterButton" type="button" tabindex="-1" value="1">+</button>
            </div>
            <img src="/images/x.png" alt="x">
        </div>
        <div>
            <label class="filterName">Price</label>
            <div class="filterInputRangeDiv">
                <input class="filterInput" id="filterInputPriceLowerField" placeholder="0" value="" type="number" name="priceMin">
                <div class="filterInput">
                    <input class="filterInput filterInputUpperSlider" id="filterInputPriceUpperSlider" placeholder="0" value="" type="range" tabindex="-1">
                    <input class="filterInput filterInputLowerSlider" id="filterInputPriceLowerSlider" placeholder="0" value="" type="range" tabindex="-1">
                </div>
                <input class="filterInput" id="filterInputPriceUpperField" placeholder="0" value="" type="number" name="priceMax">
            </div>
            <img src="/images/x.png" alt="x">
        </div>
        <div id="filterRowStars">
            <label class="filterName">Stars</label>
            <div class="filterInputRangeDiv">
                <input class="filterInput" id="filterInputStarsLowerField" placeholder="0" value="" type="number" name="starsMin">
                <div class="filterInput">
                    <input class="filterInput filterInputUpperSlider" id="filterInputStarsUpperSlider" placeholder="0" value="" type="range" tabindex="-1">
                    <input class="filterInput filterInputLowerSlider" id="filterInputStarsLowerSlider" placeholder="0" value="" type="range" tabindex="-1">
                </div>
                <input class="filterInput" id="filterInputStarsUpperField" placeholder="0" value="" type="number" name="starsMax">
            </div>
            <img src="/images/x.png" alt="x">
        </div>
        <div>
            <label class="filterName">Date</label>
            <div class="filterInputDateDiv">
                <span id="filterInputDateField">Any</span>
                <input class="filterInput" id="filterInputDateBegin" type="hidden" name="departureDate" value="0">
                <input class="filterInput" id="filterInputDateEnd" type="hidden" name="returnDate" value="0">
                <div id="inputCalendar">
                    <span id="inputCalendarLeft">◀</span>
                    <span id="inputCalendarMonth">June 2020</span>
                    <span id="inputCalendarRight">▶</span>
                </div>
            </div>
            <img src="/images/x.png" alt="x">
        </div>
